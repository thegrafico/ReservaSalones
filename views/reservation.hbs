<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">

    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

    <!-- Materialize Link-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>


    <link rel="stylesheet" href="/stylesheets/Reservation.css">


    <title>Reservation</title>
  </head>
  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="/home" class="brand-logo">{{user}}</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          {{#if user}}
          <li><a href="/home">Home</a></li>
          <li><a href="/authorize/signout">Sign Out</a></li>
          {{/if}}
        </ul>
      </div>
    </nav>
<div class="row">
    <div class="col s2">
    <div class="dropdown">
      <!-- <a class='dropdown-trigger btn' href='#' data-target='dropdown1'>Choose Department</a> -->

      <select>
            <option value="" disabled selected>Select Department</option>
            <option value="1">Comp. Elec. Eng. Dpt</option>
            <option value="2">Mech. Eng. Dpt.</option>
            <option value="3">Ind. Eng. Dpt</option>
            <option value="4">Inf. Dpt.</option>
      </select>
          <label>Materialize Select</label>
      <!-- <ul id='dropdown1' class='dropdown-content'>
          <li><a href="#!">Comp. Elec. Eng. Dpt</a></li>
          <li class="divider" tabindex="-1"></li>
          <li><a href="#!">Mech. Eng. Dpt.</a></li>
          <li class="divider" tabindex="-1"></li>
          <li><a href="#!">Ind. Eng. Dpt</a></li>
          <li class="divider" tabindex="-1"></li>
          <li><a href="#!">Inf. Dpt.</a></li>
      </ul> -->

    </div>
  </div>
  <div class="col s2">
    <div class="Date">
      <input type="text" class="datepicker" placeholder="mm/dd/yyyy">
    </div>
  </div>
  <div class="col s2">
  <div class="submit">
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
     <i class="material-icons right">Next</i>
   </button>
  </div>
</div>
</div>
<div class="Reservation">
  <table>
         <thead>
           <tr>
               <th>Room</th>
               <th>Not Available</th>
               <th>Start Hour</th>
               <th>End Hour</th>
               <th>Reserve?</th>
           </tr>
         </thead>
         <tbody>

           <tr>
             <td>
               {{Room}}
             </td>
             <td>
               <ul class="collapsible">
                 <li>
                   <div class="collapsible-header"><i class="material-icons"></i>Classes</div>
                   <div class="collapsible-body"><span>De 9:00am a 11:20am</span></div>
                 </li>
               </ul>
             </td>
             <td>
                <input type="text" class="timepicker">
               <!-- {{IniHour}} -->
             </td>
             <td>
                <input type="text" class="timepicker">
               <!-- {{EndHour}} -->
             </td>
             <td>
               <label class="Check">
                      <input type="checkbox" />
                      <span></span>
              </label>
             </td>
           </tr>

         </tbody>
       </table>


</div>

    <!-- === Javascript === -->
    <script type="text/javascript" src="/behavior/Reservation.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  </body>
</html>
